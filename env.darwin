[[ -d "$HOME/Library/Python/2.7/bin" ]] && path=("$HOME/Library/Python/2.7/bin" $path)
export PATH


py27local="$HOME/Library/Python/2.7/lib/python/site-packages"
if [[ -d "$py27local" ]]; then
    if [[ ! -z $PYTHONPATH ]]; then
        PYTHONPATH=$py27local:$PYTHONPATH
    else
        PYTHONPATH=$py27local
    fi
fi
unset py27local
export PYTHONPATH
